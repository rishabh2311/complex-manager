<%- include("partials/header"); -%>


<section id = "contact-us" class="content content-color-alt">
    <h1 class="mb-4 mt-4">Contact Us</h1>

    <form method="POST" action="/contact-us">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name = "name" placeholder="Name" required>
          </div>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" name = "email" aria-describedby="emailHelp" placeholder="Enter email" required>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" name = "phone" placeholder="phone" required>
          </div>
          <div class="form-group">
            <label for="subject">Message</label>
            <textArea class="form-control" cols = "30" rows="7" placeholder="Enter your query" name = "subject" required></textArea>
          </div>
        <button type="submit" class="btn mb-5" id = "btn-sign-up">Submit</button>
      </form>
</section>





